<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dietmaker.MainController">
   <top>
      <VBox styleClass="header-section">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="main-title" text="Diet Maker" />
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="subtitle" text="Your Personal Diet Planning Assistant" />
         </children>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" styleClass="main-content">
         <content>
            <VBox spacing="20.0">
               <children>
                  <!-- Diet Selection Section -->
                  <VBox spacing="15.0" styleClass="section-container">
                     <children>
                        <Label styleClass="section-title" text="Choose Your Diet Plan" />
                        <HBox alignment="CENTER" spacing="30.0">
                           <children>
                              <VBox alignment="CENTER" spacing="10.0" styleClass="diet-card">
                                 <children>
                                    <Label styleClass="diet-title" text="🥗 Vegetarian Diet" />
                                    <Label alignment="CENTER" styleClass="diet-description" text="Plant-based meals rich in nutrients and fiber" />
                                    <Button fx:id="vegetarianBtn" mnemonicParsing="false" onAction="#selectVegetarianDiet" styleClass="diet-btn" text="Select Vegetarian" />
                                 </children>
                              </VBox>
                              
                              <VBox alignment="CENTER" spacing="10.0" styleClass="diet-card">
                                 <children>
                                    <Label styleClass="diet-title" text="🥩 Non-Vegetarian Diet" />
                                    <Label alignment="CENTER" styleClass="diet-description" text="Protein-rich meals including lean meats and fish" />
                                    <Button fx:id="nonVegetarianBtn" mnemonicParsing="false" onAction="#selectNonVegetarianDiet" styleClass="diet-btn" text="Select Non-Vegetarian" />
                                 </children>
                              </VBox>
                              
                              <VBox alignment="CENTER" spacing="10.0" styleClass="diet-card">
                                 <children>
                                    <Label styleClass="diet-title" text="⚖️ Balanced Diet" />
                                    <Label alignment="CENTER" styleClass="diet-description" text="Well-rounded meals with optimal macro-nutrient balance" />
                                    <Button fx:id="balancedBtn" mnemonicParsing="false" onAction="#selectBalancedDiet" styleClass="diet-btn" text="Select Balanced" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Selected Diet Display Section -->
                  <VBox fx:id="selectedDietSection" spacing="15.0" styleClass="section-container" visible="false">
                     <children>
                        <Label fx:id="selectedDietTitle" styleClass="section-title" text="Selected Diet Plan: " />
                        <Label fx:id="selectedDietDescription" styleClass="diet-description" />
                     </children>
                  </VBox>
                  
                  <!-- Meal Categories Section -->
                  <VBox fx:id="mealCategoriesSection" spacing="20.0" visible="false">
                     <children>
                        <!-- Breakfast Section -->
                        <VBox spacing="10.0" styleClass="meal-category">
                           <children>
                              <Label styleClass="meal-category-title" text="🌅 Breakfast Options" />
                              <ScrollPane fitToHeight="true" maxHeight="200.0" styleClass="meal-scroll-pane">
                                 <content>
                                    <VBox fx:id="breakfastMeals" spacing="8.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                        
                        <!-- Lunch Section -->
                        <VBox spacing="10.0" styleClass="meal-category">
                           <children>
                              <Label styleClass="meal-category-title" text="🌞 Lunch Options" />
                              <ScrollPane fitToHeight="true" maxHeight="200.0" styleClass="meal-scroll-pane">
                                 <content>
                                    <VBox fx:id="lunchMeals" spacing="8.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                        
                        <!-- Dinner Section -->
                        <VBox spacing="10.0" styleClass="meal-category">
                           <children>
                              <Label styleClass="meal-category-title" text="🌙 Dinner Options" />
                              <ScrollPane fitToHeight="true" maxHeight="200.0" styleClass="meal-scroll-pane">
                                 <content>
                                    <VBox fx:id="dinnerMeals" spacing="8.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                        
                        <!-- Snacks Section -->
                        <VBox spacing="10.0" styleClass="meal-category">
                           <children>
                              <Label styleClass="meal-category-title" text="🍎 Snack Options" />
                              <ScrollPane fitToHeight="true" maxHeight="200.0" styleClass="meal-scroll-pane">
                                 <content>
                                    <VBox fx:id="snackMeals" spacing="8.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" styleClass="footer-section">
         <children>
            <Label styleClass="footer-text" text="© 2024 Diet Maker - Eat Healthy, Live Healthy" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
